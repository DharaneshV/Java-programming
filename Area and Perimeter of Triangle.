import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        /* Enter your code here. Read input from STDIN. Print output to STDOUT. Your class should be named Solution. */
        Scanner s=new Scanner(System.in);
        int b =s.nextInt();
        int h=s.nextInt();
        int x =s.nextInt();
        int y =s.nextInt();
        int z =s.nextInt();
        double a=(0.5*b*h);
        double c= x+y+z;
        System.out.printf("Area of Triangle is %.2f\n",a);
        System.out.printf("Perimeter of Triangle is %.2f\n",c);
        
    }
}
